@using DataLayer.ViewModels;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model DataLayer.ViewModels.RequestListAdminDash;
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<partial name="_Notification" />
<div>
    <div id="pendingcon"></div>
    <div id="closecon"></div>

   


    <div class="table-responsive d-none d-sm-none d-md-none d-lg-block d-xl-block" style="height:400px;">


        <table class="w-100 myTable" id="yourTableId">
            <thead>
                <tr class="text-secondary" style="height:60px; background-color:var(--bs-secondary-bg);">
                    <th scope="col">Name</th>
                    <th scope="col">Date Of Birth</th>
                    <th scope="col">Requestor</th>
                    <th scope="col">Physician Name</th>
                    <th scope="col">Date of Service</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Address</th>
                    <th scope="col">Notes</th>
                    <th scope="col">Chat With</th>
                    <th scope="col">Actions</th>
                    <th scope="col" class="d-none"></th>
                </tr>
            </thead>
            <tbody>

                @{
                    Dictionary<int, string> HashMap = new Dictionary<int, string>()
                {
                {1,"Patient"},
                {2,"Family/Friend"},
                {3,"Concierge"},
                {4,"Business"},
                {5,"VIP"},

                };
                    foreach (var item in Model.paginatedRequest)
                    {
                        <tr class="style_@item.Request.Requesttypeid" style="height:60px;">
                            <td>@item.Firstname</td>
                            <td>@item.BirthDate</td>
                            <td>@item.Request.Firstname</td>
                            <td>@item.Request.Physician.Firstname</td>
                            <td>@item.Request.Createddate</td>
                            <td class="p-2">
                                <button class="btn border-white actions  p-1 text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-telephone-fill"></i>   @item.Phonenumber
                                </button>
                                <p> (Patient) </p>
                                @{
                                    if (item.Request.Requesttypeid != 1)
                                    {
                                        <button class="btn border-white actions  p-1 text-white" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="bi bi-telephone-fill"></i>    @item.Request.Phonenumber
                                        </button>
                                        <p> (@HashMap[item.Request.Requesttypeid]) </p>
                                    }
                                }

                            </td>
                            <td>@item.City</td>
                            <td>---</td>
                            <td>
                                <div class="d-flex gap-2">
                                    <button class="btn border-white d-none d-md-block text-white"><i class="bi bi-person-lines-fill"></i> Patient</button>
                                    <button class="btn btn-outline-info d-none d-md-block text-white"><i class="bi bi-person-lines-fill"></i> Provider</button>
                                </div>
                            </td>
                            <td>
                                <div class="dropdown w-100">
                                    <button class="btn border-white d-none d-md-block text-white actions dropdown-toggle  p-1" type="button" aria-expanded="false">
                                        Actions
                                    </button>
                                    <ul class="dropdown-menu">
                                        <button class="bg-white border-white shadow-none w-100" onclick="sendagreementmodel('@item.Request.Requestid','@item.Request.Requesttypeid')"><a class=""><i class="bi bi-send me-2"></i>Send AgreeMent</a></button>
                                        <button class="bg-white border-white shadow-none w-100" onclick="clearmodel('@item.Request.Requestid')"><a class=""><i class="bi bi-x-circle me-2"></i>Clear Case</a></button>
                                        <button class="bg-white border-white shadow-none w-100"><a class="" asp-action="ViewNotes" asp-route-reqid=@item.Request.Requestid><i class="bi bi-journals me-2"></i>View Notes</a></button>
                                        <button class="bg-white border-white shadow-none w-100" onclick="transfermodel('@item.Request.Requestid')"><a class=""><i class="bi bi-x-circle me-2"></i>Transfer</a></button>
                                        <button class="bg-white border-white shadow-none w-100"><a class=""><i class="bi bi-envelope me-2"></i>Email</a></button>
                                        <button class="bg-white border-white shadow-none w-100"><a class="" asp-action="viewUploads" asp-route-reqclientid=@item.Requestclientid asp-route-requestid=@item.Request.Requestid><i class="bi-journals me-2"></i>View Uploads</a></button>
                                    </ul>
                                </div>
                            </td>
                            <td class="d-none">@HashMap[item.Request.Requesttypeid]</td>
                        </tr>
                    }
                }

            </tbody>

        </table>

    </div>
  
    <div class="d-sm-block d-md-block d-lg-none d-xl-none">
        <div class="accordion " id="accordionExample">

        @{
            Dictionary<int, string> myHashMap = new Dictionary<int, string>()
            {
            {1,"Patient"},
            {2,"Family/Friend"},
            {3,"Concierge"},
            {4,"Business"},
            {5,"VIP"},

            };
        }
        @{
            foreach (var client in Model.paginatedRequest)
            {
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#one_@client.Request.Requestid" aria-expanded="true" aria-controls="one_@client.Request.Requestid">
                                <div class="d-flex flex-column w-100">
                                    <div class="row">
                                        <div class="col-6">
                                            <p>@client.Firstname,@client.Lastname</p>
                                            <p class="fs-6">@client.Street,@client.City,<br />@client.State</p>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex justify-content-end align-items-center mb-3">
                                                <div class="requestType ms-1 me-2 fs-6">@myHashMap[client.Request.Requesttypeid]</div>
                                                <i class="bi bi-circle-fill st_@client.Request.Requesttypeid"></i>
                                            </div>
                                            <div class="d-flex flex-lg-nowrap justify-content-end">
                                                <div class="btn btn-white border-1 border-info rounded-pill text-info map-location">Map Location</div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="fs-6"><i class="bi bi-clock ms-1 me-2 text-info"></i>@client.Request.Createddate</div>
                                </div>
                            </button>
                        </h2>
                        <div id="one_@client.Request.Requestid" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="d-flex justify-content-end">
                                <hr class="m-0" />
                                <button class="btn btn-white border-info rounded-pill position-absolute case-button"><a class="dropdown-item" asp-action="ViewCase" asp-route-reqclientid=@client.Requestclientid>View case</a></button>
                            </div>
                            <div class="accordion-body" style="background:#e6e8e8">
                                <p class="mb-0"><i class="bi bi-calendar3 me-2 border rounded-circle  border-info p-1 "></i>Date of Birth: @client.BirthDate </p>
                                <p class="mb-0 mt-3"><i class="bi bi-envelope me-2 border rounded-circle  border-info p-1 "></i>Email: @client.Email</p>
                                <p class="mb-0 mt-3"><i class="bi bi-envelope me-2 border rounded-circle  border-info p-1 "></i>Transfer: @client.Notes</p>
                                <p class="mb-0 mt-3"><i class="bi bi-person-lines-fill me-2 border rounded-circle  border-info p-1 "></i>Patient: @client.Firstname</p>
                                <p class="mb-0 mt-3"><i class="bi bi-calendar3 me-2 border rounded-circle  border-info p-1 "></i>Date Of Service: @client.Request.Createddate</p>
                                <p class="mb-0 mt-3"><i class="bi bi-person-lines-fill me-2 border rounded-circle  border-info p-1 "></i>Physician: @client.Request.Physician.Firstname</p>
                                <p class="mb-0 mt-3"><i class="bi bi-textarea-resize me-2 border rounded-circle  border-info p-1 "></i>Requestor: @client.Firstname</p>
                                <div class="row mt-3">
                                    <div class="col-6">
                                        <div class="d-flex flex-column">

                                            <button class="mt-2 btn rounded-pill text-white" onclick="sendagreementmodel('@client.Request.Requestid','@client.Request.Requesttypeid')" style="background-color:orange">Send AgreeMent</button>
                                            <button class="mt-2 btn rounded-pill text-white" style="background:#228B22" onclick="transfermodel('@client.Request.Requestid')">Transfer</button>

                                            <button onclick="clearmodel('@client.Request.Requestid')" class="mt-2 btn rounded-pill text-white" onclick="clearmodel('@client.Request.Requestid')" style="background:orange">Clear Case</button>

                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex flex-column">
                                            <button class="mt-2 btn rounded-pill text-white" style="background:#228B22"> <a asp-action="ViewNotes" asp-route-reqid=@client.Request.Requestid>View Notes</a> </button>
                                            <button class="mt-2 btn rounded-pill text-white" style="background:#228B22"> <a asp-action="viewUploads" asp-route-reqclientid=@client.Requestclientid asp-route-requestid=@client.Request.Requestid>View Uploads</a> </button>
                                            <button class="mt-2 btn rounded-pill text-white" style="background:#228B22">Email</button>


                                        </div>
                                    </div>

                                </div>
                                <div class=" d-flex flex-row justify-content-end gap-2 align-items-center mt-2">
                                    <p class="mt-2"> Chat With</p>
                                    <button class="btn btn-outline-info  text-info"><i class="bi bi-person-lines-fill text-info"></i> Patient</button>
                                    <button class="btn btn-outline-info  text-info"><i class="bi bi-person-lines-fill text-info"></i> Provider</button>
                                </div>
                                <!-- Modal cancel case -->
                                <div class="modal fade" id="btnn_@client.Request.Requestid" tabindex="-1" aria-labelledby="btnn_@client.Request.Requestid" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content" style="font-weight:600">
                                            <form asp-action="CancelCase" asp-route-reqid=@client.Request.Requestid>
                                                <div class="modal-header bg-info text-white">
                                                    <h5 class="modal-title" id="exampleModalLabel"> Confirm Cancellation</h5>
                                                    <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close" style="color:white;"></button>
                                                </div>

                                                <div class="modal-body">
                                                    <p class="mb-3 mt-3 text-dark"> Patient Name : <span class="text-info"> @client.Firstname</span></p>

                                                    <div class="dropdown mb-4 border">
                                                        <button class="btn btn-outline-black dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" style="width:100%">
                                                            Reason For Cancellation
                                                        </button>
                                                        <ul class="dropdown-menu" style="width:100%">
                                                            <li><a class="dropdown-item">Charges are more</a></li>
                                                            <li><a class="dropdown-item">Another action</a></li>
                                                            <li><a class="dropdown-item">Something else here</a></li>
                                                        </ul>
                                                    </div>

                                                    <textarea asp-for="AdminNotes" rows="5" class="col-12 form-control p-1" placeholder="please provide a brief explanation for your cancelation" style="font-size:medium"></textarea>

                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-info text-white">Continue</button>
                                                    <button type="button" class="btn btn-outline-info" data-bs-dismiss="modal">Cancel</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            }
        }



        </div>

    </div>
    <div class=" @(Model.total == 0 ? "d-none" : "")">
        <nav aria-label="Page navigation" class="p-4 d-flex justify-content-between" ">
            <span>Page @Model.CurrentPage of @Model.TotalPages  </span>
            <span>Total requests: @Model.total</span>
            <ul class="pagination me-2">
                <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                    <button class="page-link" onclick="Pagefile(@Model.CurrentPage-1,@Model.PageSize)"><i class="bi bi-chevron-left text-black"></i></button>
                </li>
                <li class="page-item">
                    <button class="page-link bg-info text-white fw-bold mx-1 text-black" data-page="@Model.CurrentPage">@Model.CurrentPage</button>
                </li>

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <button class="page-link" onclick="Pagefile(@Model.CurrentPage+1,@Model.PageSize)"><i class="bi bi-chevron-right text-black"></i></button>
                </li>
            </ul>

        </nav>

    </div>
</div>
<script>

    $(document).ready(function () {
        $('.dropdown-toggle').click(function () {
            var dropdownMenu = $(this).next('.dropdown-menu');
            $('.dropdown-menu').not(dropdownMenu).hide();
            dropdownMenu.toggle();
        });

        $(document).on('click', function (e) {
            if (!$(e.target).closest('.dropdown').length) {
                $('.dropdown-menu').hide();
            }
        });
    });


</script>