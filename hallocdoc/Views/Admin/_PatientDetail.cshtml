@model DataLayer.ViewModels.PatientRecordvm;

<div class="d-none d-md-block table-responsive">

    <table class="table">
        <thead class="table-secondary">
            <tr class="">
                <th>First Name</th>
                <th>Last Name</th>
                <th width="20%">Email</th>
                <th width="15%">Phone</th>
                <th width="30%">Address</th>
                <th class="d-flex justify-content-center">Action</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model.User)
            {
                <tr>
                    <td>
                        @item.Firstname
                    </td>
                    <td>@item.Lastname</td>
                    <td>@item.Email</td>
                    <td>@item.Mobile</td>
                    <td>@item.Street,@item.City,@item.State,@item.Zipcode </td>
                    <td class=" d-flex justify-content-center">
                       <a asp-action="PatientHistory" class="btn btn-outline-info float-end me-3  " asp-route-userid="@item.Userid">Explore</a> 
                    </td>
                </tr>
            }



        </tbody>
    </table>

</div>

<div class=" @(Model.total == 0 ? "d-none" : "")">
    <nav aria-label="Page navigation" class="p-4 d-flex justify-content-between" ">
        <span>Page @Model.CurrentPage of @Model.TotalPages  </span>
        <span>Total requests: @Model.total</span>
        <ul class="pagination me-2">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <button class="page-link" onclick="Pagefile(@Model.CurrentPage-1,@Model.PageSize)"><i class="bi bi-chevron-left text-black"></i></button>
            </li>
            <li class="page-item">
                <button class="page-link bg-info text-white fw-bold mx-1 text-black" data-page="@Model.CurrentPage">@Model.CurrentPage</button>
            </li>

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <button class="page-link" onclick="Pagefile(@Model.CurrentPage+1,@Model.PageSize)"><i class="bi bi-chevron-right text-black"></i></button>
            </li>
        </ul>

    </nav>
</div>
<div class="d-sm-block d-md-block d-lg-none d-xl-none">
    <div class="accordion " id="accordionExample">
    @{
        foreach (var client in Model.User)
        {
                <div class="accordion-item">
                    <h2 class="accordion-header">
                        <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#one_@client.Userid" aria-expanded="true" aria-controls="one_@client.Userid">
                            <div class="d-flex flex-column w-100">
                                <div class="row">
                                    <div class="col-6">
                                        <p>@client.Firstname,@client.Lastname</p>
                                        <p class="fs-6">@client.Mobile</p>
                                    </div>
                                 
                                </div>
                             
                            </div>
                        </button>
                    </h2>
                    <div id="one_@client.Userid" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                       
                        <div class="accordion-body" style="background:#e6e8e8">
                      
                            <p class="mb-0 mt-3"><i class="bi bi-envelope me-2 border rounded-circle  border-info p-1 "></i>Email: @client.Email</p>
                            <p class="mb-0 mt-3"><i class="bi bi-telephone me-2 border rounded-circle  border-info p-1"></i>patient:@client.Mobile</p>



                        </div>
                    </div>
                </div>
        }
    }
    </div>
</div>