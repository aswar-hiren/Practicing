@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model DataLayer.ViewModels.forgetpassmodel;


<Partial name="_Notification" />
<body>
    <div class="container  " style="height: 100vh;">
        <div class="col-auto justify-content-center align-item-center p-3 moonbtn">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="40" fill="currentColor" class="bi bi-moon"
                 viewBox="0 0 16 16">
                <path d="M6 .278a.77.77 0 0 1 .08.858 7.2 7.2 0 0 0-.878 3.46c0 4.021 3.278 7.277 7.318 7.277q.792-.001 1.533-.16a.79.79 0 0 1 .81.316.73.73 0 0 1-.031.893A8.35 8.35 0 0 1 8.344 16C3.734 16 0 12.286 0 7.71 0 4.266 2.114 1.312 5.124.06A.75.75 0 0 1 6 .278M4.858 1.311A7.27 7.27 0 0 0 1.025 7.71c0 4.02 3.279 7.276 7.319 7.276a7.32 7.32 0 0 0 5.205-2.162q-.506.063-1.029.063c-4.61 0-8.343-3.714-8.343-8.29 0-1.167.242-2.278.681-3.286" />
            </svg>
        </div>
        <div class="row  bgimg justify-content-center">

            <div class="col-xl-9 col-lg-9 col-md-10 col-sm-12 col-xs-10 mx-auto  ">

                <div class="row  mb-md-5  ">
                    <div class="col-4 mx-lg-auto mx-xl-auto ">
                        <img src="~/Images/hellodoclogo.png" class="mx-auto" />
                    </div>

                </div>
                <div class="row  justify-content-center     " style="height: 700px;">
                    <div class="col-xl-6 col-md-6   ">
                        <div class="row mt-5 mb-3">
                            <div class="d-flex justify-content-between">
                             
                                <a asp-action="index" asp-controller="Home"
                              class="btn btn-white border-1 border-info text-info rounded-1">&lt; &nbspBack</a>
                            </div>
                        </div>
                        <h4 class="mb-3">RESET YOUR PASSWORD</h4>
                        <form asp-action="forgotPassword">
                        <div class="input-group mb-2">

                            <input type="text" class="form-control " placeholder="email" aria-label="email" asp-for="email">

                                <div class="input-group-prepend border-2">
                                    <i class="bi bi-person-circle fs-3 p-2 text-info bg-white"></i>
                                </div>


                               

                            </div>
                          <span asp-validation-for="email" class="text-danger mb-2 p-0"></span>
                    
                            <button type="submit" class="btn w-100 btn-lg btn-block text-center" style="background-color: #0dcaf0; color: white;">Reset password</button>
                        </form>
                            <div class=" mt-4 d-flex justify-content-center align-item-center  mb-md-3  " style="color: #0dcaf0;">
                                <div class="">
                                    <span class="material-icons">
                                        arrow_back_ios
                                    </span>
                                </div>
                        
                  
                            <a asp-controller="Patient" asp-action="PatientLoginPage">
                                <div>
                                    Back To Login Page
                                </div>
                            </a>
                        </div>
                    </div>
                </div>


            </div>
            <div class=" d-flex justify-content-center align-items-center  " style="position: absolute; bottom: 0;">
                <a href="" class="p-3">Terms And condition</a>
                <a href="" class="p-3">|</a>
                <a href="" class="p-3">Privacy Policy</a>
            </div>

        </div>


    </div>

</body>

<script>
  
    @section Scripts{
        @{
                <Partial name="_ValidationScriptsPartial" />
        }
            }
</script>