@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DataLayer.ViewModel.uservm

<head>
    <style>
        .form-select {
            height: 3em !important;
            width: 20em;
            color: gray !important;
            font-size: 16px;
            box-shadow: none !important;
        }

        input[type="checkbox"] {
            transform: scale(1.5);
        }
    </style>
</head>
<div class="table-responsive " id="maintable">
    <table class="schedulereq d-block">

        <thead class="table-active">
            <tr >
                <th scope="col" >User Id</th>
                <th scope="col">
                    First Name
                </th>
                <th scope="col">Last Name</th>
                <th scope="col" width="20%">Email</th>
                <th scope="col">Age</th>
                <th scope="col" width="20%">Phone Number</th>
                <th scope="col"  class="">Gender</th>
                <th scope="col" class="">City</th>
                <th scope="col" class="">Country</th>
                <th scope="col" class="" width="20%">Action</th>
            </tr>
         
        </thead>
        <tbody>
            @{
                
                foreach (var item in Model.paginatedRequest)
                {
                    <tr>

                        <td>@item.Userid</td>

                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Email</td>
                        <td>21</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Gender</td>
                        <td>@item.CityNavigation.CityName</td>
                        <td>@item.Country</td>
                        <td class="d-flex">
                            <button class="btn btn-outline-info me-2 text-white p-2 m-1 fw-bolder" style="background-color: #e0bbd2" onclick="clearmodel(@item.Userid)" >Edit</button>
                            <a asp-action="deleteuser" asp-route-userid="@item.Userid" class="ms-2 d-none d-md-block text-white p-2 m-1 fw-bolder" style="background-color: black">Delete</a>
                        </td>
                    </tr>
                }
         }
                

        </tbody>

     
    </table>
  
</div>
<div class=" @(Model.total == 0 ? "d-none" : "")">
    <nav aria-label="Page navigation" class="p-4 d-flex justify-content-between" ">
        <span>Page @Model.CurrentPage of @Model.TotalPages  </span>
        <span>Total requests: @Model.total</span>
        <ul class="pagination me-2">
            <li class="page-item @(Model.CurrentPage <= 1 ? "disabled" : "")">
                <button class="page-link" onclick="Pagefile(@Model.CurrentPage-1,@Model.PageSize)"><i class="bi bi-chevron-left text-black"></i></button>
            </li>
            <li class="page-item">
                <button style="background-color: #572549" class="page-link  text-white fw-bold mx-1 text-black" data-page="@Model.CurrentPage">@Model.CurrentPage</button>
            </li>

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <button class="page-link" onclick="Pagefile(@Model.CurrentPage+1,@Model.PageSize)"><i class="bi bi-chevron-right text-black"></i></button>
            </li>
        </ul>

    </nav>

</div>