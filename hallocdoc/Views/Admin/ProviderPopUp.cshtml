@model DataLayer.ViewModels.AssignModel;<div class="modal fade" id="ProviderPopUp" tabindex="-1" aria-labelledby="ProviderPopUp" aria-hidden="true">    <div class="modal-dialog modal-dialog-centered">        <div class="modal-content" style="font-weight:600">            <div class="modal-header bg-info text-white">                <h5 class="modal-title" id="exampleModalLabel"> Assign Case</h5>                <button type="button" class="btn-close text-white" data-bs-dismiss="modal" aria-label="Close" style="color:white;"></button>            </div>            <div class="modal-body">                <div class="mb-3">                    <p>Choose Communication to send message</p>                    <input type="radio" id="sms" name="communicationType" value="SMS" class="mb-3 text-info">                    <label for="sms">HTML</label><br>                    <input type="radio" id="email" name="communicationType" value="Email" class="mb-3">                    <label for="email">Email</label><br>                    <input type="radio" id="both" name="communicationType" value="Both" class="mb-3">                    <label for="both">Both</label>                </div>                <div class="form-floating text-secondary">                    <textarea class="form-control mb-2" placeholder="Message" id="message" style="height: 100px"></textarea>                    <label for="message">Message</label>                </div>            </div>            <div class="modal-footer">                <button type="submit" class="btn btn-info text-white" data-bs-dismiss="modal" onclick="sendmail('@Model.email')">Send</button>                <button type="button" class="btn text-info border border-info" data-bs-dismiss="modal">Cancel</button>            </div>        </div>    </div></div><script>    function sendmail(email) {        var text = $("#message").val();        console.log(text);        console.log(email)        $.ajax({            url: "/Admin/mailsend",            type: "POST",            data: { data: email ,text:text},            success: function (data) {                $("#provider").html(data);                            },            error: function (e) {                console.log(e);            }        });    }
</script>